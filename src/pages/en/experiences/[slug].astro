              <!-- CTA Card -->
              <div class="bg-gradient-to-br from-coral to-sunset-orange rounded-xl p-6 shadow-lg text-white">
                <h3 class="text-2xl font-bold mb-3">
                  {t('experienceDetail.readyForAdventure')}
                </h3>
                <p class="mb-6 text-white/90">
                  {t('experienceDetail.readyForAdventureDesc')}
                </p>
                <a 
                  href="/en#contact" 
                  class="block w-full text-center px-6 py-4 bg-white text-coral rounded-lg font-bold text-lg hover:bg-sand/90 transition-all duration-300 transform hover:scale-105 shadow-lg"
