---
import "../../styles/global.css";
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import DownloadPDFButton from '../../components/react/DownloadPDFButton';
import { experiences } from '../../data/experiences';

export function getStaticPaths() {
  return experiences.map((experience) => ({
    params: { slug: experience.slug },
    props: { experience },
  }));
}

const { experience } = Astro.props;
---

<Layout 
  title={`${experience.title} | Ricardo Vibes - Experiencias en Cuba`}
  description={experience.description}
>
  <Header />
  
  <main class="bg-white">
    <!-- Hero Section -->
    <section class="relative h-[60vh] min-h-[400px] bg-gradient-to-br from-caribbean-blue to-ocean-blue">
      <div class="absolute inset-0 flex items-center justify-center text-white/80 p-6 text-center">
        <p class="text-xl font-medium">{experience.imagePlaceholder}</p>
      </div>
      <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"></div>
      
      <!-- Title Overlay -->
      <div class="absolute bottom-0 left-0 right-0 p-8 md:p-12">
        <div class="container mx-auto max-w-6xl">
          <a href="/#experiences" class="inline-flex items-center gap-2 text-white/90 hover:text-white mb-4 transition-colors">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
            </svg>
            Volver a experiencias
          </a>
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-4">
            {experience.title}
          </h1>
          <p class="text-xl text-white/90 max-w-3xl">
            {experience.description}
          </p>
        </div>
      </div>
    </section>

    <!-- Quick Info Bar -->
    <section class="bg-sand/20 border-b border-sand/40">
      <div class="container mx-auto px-4 py-6 max-w-6xl">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div class="flex items-center gap-3">
            <div class="w-12 h-12 rounded-full bg-caribbean-blue/10 flex items-center justify-center flex-shrink-0">
              <svg class="w-6 h-6 text-caribbean-blue" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <div>
              <p class="text-sm text-gray-600 font-medium">Duración</p>
              <p class="text-lg font-semibold text-gray-900">{experience.duration}</p>
            </div>
          </div>
          
          <div class="flex items-center gap-3">
            <div class="w-12 h-12 rounded-full bg-tropical-green/10 flex items-center justify-center flex-shrink-0">
              <svg class="w-6 h-6 text-tropical-green" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
              </svg>
            </div>
            <div>
              <p class="text-sm text-gray-600 font-medium">Dificultad</p>
              <p class="text-lg font-semibold text-gray-900">{experience.difficulty}</p>
            </div>
          </div>
          
          <div class="flex items-center gap-3">
            <div class="w-12 h-12 rounded-full bg-coral/10 flex items-center justify-center flex-shrink-0">
              <svg class="w-6 h-6 text-coral" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <div>
              <p class="text-sm text-gray-600 font-medium">Precio</p>
              <p class="text-lg font-semibold text-gray-900">{experience.price}</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Main Content -->
    <section class="py-16">
      <div class="container mx-auto px-4 max-w-6xl">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
          <!-- Left Column - Main Content -->
          <div class="lg:col-span-2 space-y-12">
            <!-- Highlights -->
            <div>
              <h2 class="text-3xl font-bold text-gray-900 mb-6 flex items-center gap-3">
                <span class="w-10 h-10 rounded-full bg-caribbean-blue/10 flex items-center justify-center">
                  <svg class="w-5 h-5 text-caribbean-blue" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                  </svg>
                </span>
                Lo más destacado
              </h2>
              <ul class="grid grid-cols-1 md:grid-cols-2 gap-4">
                {experience.highlights.map((highlight) => (
                  <li class="flex items-start gap-3 bg-sand/10 p-4 rounded-lg">
                    <svg class="w-6 h-6 text-tropical-green flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                    </svg>
                    <span class="text-gray-700">{highlight}</span>
                  </li>
                ))}
              </ul>
            </div>

            <!-- Itinerary -->
            <div>
              <h2 class="text-3xl font-bold text-gray-900 mb-6 flex items-center gap-3">
                <span class="w-10 h-10 rounded-full bg-ocean-blue/10 flex items-center justify-center">
                  <svg class="w-5 h-5 text-ocean-blue" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
                  </svg>
                </span>
                Itinerario detallado
              </h2>
              <div class="space-y-6">
                {experience.itinerary.map((item, index) => (
                  <div class="relative pl-8 pb-6 border-l-2 border-caribbean-blue/30 last:border-l-0 last:pb-0">
                    <div class="absolute -left-3 top-0 w-6 h-6 rounded-full bg-caribbean-blue flex items-center justify-center text-white text-sm font-bold">
                      {index + 1}
                    </div>
                    <div class="bg-white border border-sand/40 rounded-lg p-6 shadow-sm hover:shadow-md transition-shadow">
                      <p class="text-sm font-semibold text-coral uppercase tracking-wide mb-2">
                        {item.day}
                      </p>
                      <h3 class="text-xl font-bold text-gray-900 mb-3">
                        {item.title}
                      </h3>
                      <p class="text-gray-700 leading-relaxed">
                        {item.description}
                      </p>
                    </div>
                  </div>
                ))}
              </div>
            </div>
          </div>

          <!-- Right Column - Sidebar -->
          <div class="lg:col-span-1">
            <div class="sticky top-8 space-y-6">
              <!-- What's Included Card -->
              <div class="bg-gradient-to-br from-caribbean-blue/5 to-ocean-blue/5 border border-caribbean-blue/20 rounded-xl p-6 shadow-lg">
                <h3 class="text-2xl font-bold text-gray-900 mb-4 flex items-center gap-2">
                  <svg class="w-6 h-6 text-caribbean-blue" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                  Incluido
                </h3>
                <ul class="space-y-3">
                  {experience.included.map((item) => (
                    <li class="flex items-start gap-3">
                      <svg class="w-5 h-5 text-tropical-green flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                      </svg>
                      <span class="text-gray-700">{item}</span>
                    </li>
                  ))}
                </ul>
              </div>

              <!-- CTA Card -->
              <div class="bg-gradient-to-br from-coral to-sunset-orange rounded-xl p-6 shadow-lg text-white">
                <h3 class="text-2xl font-bold mb-3">
                  ¿Listo para esta aventura?
                </h3>
                <p class="mb-6 text-white/90">
                  Contáctame para personalizar esta experiencia según tus preferencias y crear recuerdos inolvidables.
                </p>
                <a 
                  href="/#contact" 
                  class="block w-full text-center px-6 py-4 bg-white text-coral rounded-lg font-bold text-lg hover:bg-sand/90 transition-all duration-300 transform hover:scale-105 shadow-lg"
                >
                  Reservar ahora
                </a>
              </div>

              <!-- Download PDF Button -->
              <div class="flex justify-center">
                <DownloadPDFButton experience={experience} client:load />
              </div>

              <!-- Additional Info -->
              <div class="bg-sand/20 rounded-xl p-6 border border-sand/40">
                <h3 class="text-lg font-bold text-gray-900 mb-4 flex items-center gap-2">
                  <svg class="w-5 h-5 text-ocean-blue" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                  Información importante
                </h3>
                <ul class="space-y-2 text-sm text-gray-700">
                  <li class="flex items-start gap-2">
                    <span class="text-caribbean-blue">•</span>
                    <span>Grupos pequeños para experiencia personalizada</span>
                  </li>
                  <li class="flex items-start gap-2">
                    <span class="text-caribbean-blue">•</span>
                    <span>Itinerario flexible según tus intereses</span>
                  </li>
                  <li class="flex items-start gap-2">
                    <span class="text-caribbean-blue">•</span>
                    <span>Guías locales expertos y apasionados</span>
                  </li>
                  <li class="flex items-start gap-2">
                    <span class="text-caribbean-blue">•</span>
                    <span>Cancelación flexible disponible</span>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Related Experiences CTA -->
    <section class="py-16 bg-gradient-to-b from-sand/20 to-white">
      <div class="container mx-auto px-4 max-w-6xl text-center">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          Explora más experiencias
        </h2>
        <p class="text-lg text-gray-700 mb-8 max-w-2xl mx-auto">
          Descubre otras aventuras únicas que Cuba tiene para ofrecer
        </p>
        <a 
          href="/#experiences" 
          class="inline-block px-8 py-4 bg-caribbean-blue text-white rounded-lg font-semibold text-lg hover:bg-ocean-blue transition-all duration-300 transform hover:scale-105 shadow-lg"
        >
          Ver todas las experiencias
        </a>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
