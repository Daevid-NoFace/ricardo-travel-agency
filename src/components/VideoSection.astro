---
// Video section with YouTube/Vimeo embed
---

<section class="py-20 bg-gradient-to-b from-white to-sand/20">
  <div class="container mx-auto px-4">
    <!-- Section Header -->
    <div class="text-center mb-12 max-w-3xl mx-auto">
      <span class="text-coral font-semibold text-sm uppercase tracking-wider mb-4 block">Watch & Explore</span>
      <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
        Experience Cuba <span class="text-caribbean-blue">Virtually</span>
      </h2>
      <p class="text-lg text-gray-700 leading-relaxed">
        Get a taste of what awaits you in Cuba through these immersive videos showcasing the island's beauty, culture, and unforgettable experiences.
      </p>
    </div>

    <!-- Main Featured Video -->
    <div class="max-w-5xl mx-auto mb-12">
      <div class="relative aspect-video rounded-2xl overflow-hidden shadow-2xl bg-gradient-to-br from-caribbean-blue to-ocean-blue">
        <!-- Video Embed Placeholder -->
        <div class="absolute inset-0 flex items-center justify-center text-white">
          <div class="text-center p-8">
            <svg class="w-24 h-24 mx-auto mb-4 opacity-50" fill="currentColor" viewBox="0 0 24 24">
              <path d="M8 5v14l11-7z"/>
            </svg>
            <p class="text-xl font-semibold mb-2">Featured Video: Discover Cuba</p>
            <p class="text-sm opacity-75">Replace with YouTube/Vimeo embed code</p>
            <p class="text-xs opacity-50 mt-4">Example: https://www.youtube.com/embed/VIDEO_ID</p>
          </div>
        </div>
        
        <!-- Uncomment and replace VIDEO_ID with actual video ID -->
        <!-- <iframe 
          class="absolute inset-0 w-full h-full"
          src="https://www.youtube.com/embed/VIDEO_ID"
          title="Discover Cuba"
          frameborder="0"
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
          allowfullscreen
        ></iframe> -->
      </div>
    </div>

    <!-- Additional Video Thumbnails -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 max-w-5xl mx-auto">
      <!-- Video 1 -->
      <div class="group cursor-pointer">
        <div class="relative aspect-video rounded-lg overflow-hidden shadow-lg hover:shadow-xl transition-shadow bg-gradient-to-br from-coral to-sunset-orange mb-3">
          <div class="absolute inset-0 flex items-center justify-center text-white">
            <div class="text-center p-4">
              <svg class="w-16 h-16 mx-auto opacity-75 group-hover:opacity-100 transition-opacity" fill="currentColor" viewBox="0 0 24 24">
                <path d="M8 5v14l11-7z"/>
              </svg>
            </div>
          </div>
        </div>
        <h3 class="font-semibold text-gray-900 group-hover:text-caribbean-blue transition-colors">Havana Street Tour</h3>
        <p class="text-sm text-gray-600">3:45</p>
      </div>

      <!-- Video 2 -->
      <div class="group cursor-pointer">
        <div class="relative aspect-video rounded-lg overflow-hidden shadow-lg hover:shadow-xl transition-shadow bg-gradient-to-br from-tropical-green to-ocean-blue mb-3">
          <div class="absolute inset-0 flex items-center justify-center text-white">
            <div class="text-center p-4">
              <svg class="w-16 h-16 mx-auto opacity-75 group-hover:opacity-100 transition-opacity" fill="currentColor" viewBox="0 0 24 24">
                <path d="M8 5v14l11-7z"/>
              </svg>
            </div>
          </div>
        </div>
        <h3 class="font-semibold text-gray-900 group-hover:text-caribbean-blue transition-colors">Vi√±ales Valley Beauty</h3>
        <p class="text-sm text-gray-600">5:20</p>
      </div>

      <!-- Video 3 -->
      <div class="group cursor-pointer">
        <div class="relative aspect-video rounded-lg overflow-hidden shadow-lg hover:shadow-xl transition-shadow bg-gradient-to-br from-caribbean-blue to-tropical-green mb-3">
          <div class="absolute inset-0 flex items-center justify-center text-white">
            <div class="text-center p-4">
              <svg class="w-16 h-16 mx-auto opacity-75 group-hover:opacity-100 transition-opacity" fill="currentColor" viewBox="0 0 24 24">
                <path d="M8 5v14l11-7z"/>
              </svg>
            </div>
          </div>
        </div>
        <h3 class="font-semibold text-gray-900 group-hover:text-caribbean-blue transition-colors">Cuban Culture & Music</h3>
        <p class="text-sm text-gray-600">4:15</p>
      </div>
    </div>
  </div>
</section>