---
import "@/styles/global.css";
import Layout from '@/layouts/Layout.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import DownloadPDFButton from '@/components/react/DownloadPDFButton';
import { getExperiences, getExperience } from '@/data/experiences';
import { getLangFromUrl, useTranslations } from '@/components/i18n/utils';

export function getStaticPaths() {
  const experiences = getExperiences('en');
  return experiences.map((experience) => ({
    params: { slug: experience.slug },
    props: { slug: experience.slug },
  }));
}

const { slug } = Astro.props;
const currentLang = getLangFromUrl(Astro.url);
const t = useTranslations(currentLang);
const experience = getExperience(slug, currentLang);

if (!experience) {
  return Astro.redirect('/404');
}

// Convertir imagePlaceholder en array de imágenes
const images = experience.imagePlaceholder.split(',').map(img => img.trim());
const hasMultipleImages = images.length > 1;
const heroId = `hero-${slug}`;

// Convert description to string if it's an array
const descriptionText = Array.isArray(experience.description) 
  ? experience.description.join(' ') 
  : experience.description;

type DescriptionSegment = 
  | { type: 'text'; content: string }
  | { type: 'list'; items: string[] };

const getDescriptionSegments = (description: string | string[]): DescriptionSegment[] => {
  if (!Array.isArray(description)) {
    return [{ type: 'text', content: description }];
  }

  const segments: DescriptionSegment[] = [];
  let currentText = '';

  const flushText = () => {
    if (currentText.trim()) {
      segments.push({ type: 'text', content: currentText.trim() });
      currentText = '';
    }
  };

  description.forEach((line) => {
    const trimmed = line.trim();
    if (trimmed.startsWith('-')) {
      flushText();
      const cleaned = trimmed.replace(/^-+\s*/, '');
      const lastSegment = segments[segments.length - 1];
      if (lastSegment && lastSegment.type === 'list') {
        lastSegment.items.push(cleaned);
      } else {
        segments.push({ type: 'list', items: [cleaned] });
      }
    } else {
      currentText += (currentText ? ' ' : '') + line.trim();
    }
  });

  flushText();
  return segments;
};

const itineraryWithSegments = experience.itinerary.map((item) => ({
  ...item,
  segments: getDescriptionSegments(item.description)
}));
---

<Layout 
  title={`${experience.title} | Ricardo Vibes - Experiencias en Cuba`}
  description={descriptionText}
>
  <Header />
  
  <main class="bg-white">
    <!-- Hero Section with Image Carousel -->
    <section id="hero-section" class="relative min-h-screen bg-gradient-to-br from-caribbean-blue to-ocean-blue overflow-y-auto md:overflow-hidden">
      <!-- Image Carousel -->
      {images[0].startsWith('@/') || images[0].startsWith('/') ? (
        <div class="absolute inset-0">
          {images.map((img, index) => (
            <img 
              src={img.replace('@/', '/')} 
              alt={`${experience.title} - ${index + 1}`}
              class={`absolute inset-0 w-full h-full object-cover transition-opacity duration-500 hero-slide ${index === 0 ? 'opacity-100' : 'opacity-0'}`}
              data-hero={heroId}
              data-index={index}
            />
          ))}
          
          {/* Indicadores de imagen */}
          {/* {hasMultipleImages && (
            <div class="absolute bottom-32 left-1/2 -translate-x-1/2 flex gap-2 z-10">
              {images.map((_, index) => (
                <div 
                  class={`w-2 h-2 rounded-full transition-all duration-300 hero-indicator ${index === 0 ? 'bg-white w-8' : 'bg-white/50'}`}
                  data-hero={heroId}
                  data-index={index}
                />
              ))}
            </div>
          )} */}
        </div>
      ) : (
        <div class="absolute inset-0 flex items-center justify-center text-white/80 p-6 text-center">
          <p class="text-xl font-medium">{experience.imagePlaceholder}</p>
        </div>
      )}
      
      <!-- Dark Overlay -->
      <div class="absolute inset-0 bg-black/70"></div>
      
      <!-- Title Overlay -->
      <div class="relative md:absolute md:bottom-0 left-0 right-0 p-8 md:p-12 z-40 mt-20 md:mt-0">
        <div class="container mx-auto max-w-6xl">
          <a 
            href="/en#experiences" 
            class="inline-flex items-center gap-2 px-4 py-2 mb-6 bg-white/10 backdrop-blur-sm hover:bg-white/20 text-white rounded-lg transition-all duration-300 border border-white/20 hover:border-white/40 group"
          >
            <svg class="w-5 h-5 transition-transform group-hover:-translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
            </svg>
            <span class="font-medium">{t('experienceDetail.backToExperiences')}</span>
          </a>
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-4 drop-shadow-2xl">
            {experience.title}
          </h1>
          <p class="text-xl text-justify text-white drop-shadow-xl leading-relaxed">
            {experience.description}
          </p>
        </div>
      </div>
    </section>

    <!-- Quick Info Bar -->
    <section class="bg-sand/20 border-b border-sand/40">
      <div class="container mx-auto px-4 py-6 max-w-6xl">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div class="flex items-center gap-3">
            <div class="w-12 h-12 rounded-full bg-caribbean-blue/10 flex items-center justify-center flex-shrink-0">
              <svg class="w-6 h-6 text-caribbean-blue" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <div>
              <p class="text-sm text-gray-600 font-medium">{t('common.duration')}</p>
              <p class="text-lg font-semibold text-gray-900">{experience.duration}</p>
            </div>
          </div>
          
