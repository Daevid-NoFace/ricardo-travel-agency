---
import "../styles/global.css";
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import About from '../components/About.astro';
import Experiences from '../components/Experiences.astro';
import Gallery from '../components/Gallery.astro';
import Testimonials from '../components/react/Testimonials';
import VideoSection from '../components/VideoSection.astro';
import BlogPreview from '../components/BlogPreview.astro';
import ContactSection from '../components/react/ContactSection';
import Footer from '../components/Footer.astro';
---

<Layout 
  title="Ricardo Vibes - Descubre experiencias auténticas en Cuba | Guía local"
  description="Vive la Cuba real con un experto local. Tours personalizados, inmersión cultural y aventuras inolvidables en La Habana, Viñales, Trinidad y más."
>
  <Header />
  <main>
    <Hero />
    <About />
    <Experiences />
    <Gallery />
    <Testimonials client:load />
    <VideoSection />
    <BlogPreview />
    <ContactSection client:load />
  </main>
  <Footer />
</Layout>