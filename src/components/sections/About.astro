---
import AnimatedCounter from "../react/AnimatedCounter";
import { getI18n } from '../i18n';

// Default to Spanish for SSG
const t = getI18n({ currentLocale: 'es' });
---

<section id="about" class="py-20 bg-white">
  <div class="container mx-auto px-4">
    <div class="grid md:grid-cols-2 gap-12 items-center max-w-6xl mx-auto">
      <!-- Image Column -->
      <div class="order-2 md:order-1">
        <div class="relative">
          <!-- Placeholder for agent's photo -->
          <div class="aspect-square rounded-2xl overflow-hidden shadow-2xl flex items-center justify-center">
            <img src="/pictures/papa.jpg" alt="Foto del guÃ­a" class="w-full h-full object-cover">
          </div>
          <!-- Decorative Element -->
          <!-- <div class="absolute -bottom-6 -right-6 w-32 h-32 bg-coral rounded-full opacity-20 -z-10"></div>
          <div class="absolute -top-6 -left-6 w-24 h-24 bg-sunset-orange rounded-full opacity-20 -z-10"></div> -->
        </div>
      </div>

      <!-- Text Column -->
      <div class="order-1 md:order-2">
        <div class="mb-4">
          <span class="text-coral font-semibold text-sm uppercase tracking-wider" data-i18n="about.label">{t.about.label}</span>
        </div>
        
        <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
          <span data-i18n="about.title">{t.about.title}</span> <span class="text-caribbean-blue" data-i18n="about.titleHighlight">{t.about.titleHighlight}</span> <span data-i18n="about.titleEnd">{t.about.titleEnd}</span>
        </h2>
        
        <p class="text-lg text-gray-700 mb-6 leading-relaxed" data-i18n="about.intro">
          {t.about.intro}
        </p>
        
        <p class="text-lg text-gray-700 mb-8 leading-relaxed" data-i18n="about.description">
          {t.about.description}
        </p>

        <!-- Trust Indicators -->
        <div class="grid grid-cols-2 gap-6 mb-8">
          <div class="bg-sand/30 rounded-lg p-6 text-center transform hover:scale-105 transition-transform">
            <div class="text-4xl font-bold text-caribbean-blue mb-2">
              <span><AnimatedCounter end={25} duration={2000} client:load/>+</span>
            </div>
            <div class="text-gray-700 font-medium" data-i18n="about.yearsExperience">{t.about.yearsExperience}</div>
          </div>
          
          <div class="bg-sand/30 rounded-lg p-6 text-center transform hover:scale-105 transition-transform">
            <div class="text-4xl font-bold text-coral mb-2">
              <span><AnimatedCounter end={500} duration={2000} client:load/>+</span>
            </div>
            <div class="text-gray-700 font-medium" data-i18n="about.happyTravelers">{t.about.happyTravelers}</div>
          </div>
        </div>

        <!-- Key Points -->
        <div class="space-y-4">
          <div class="flex items-start gap-3">
            <svg class="w-6 h-6 text-tropical-green flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            <p class="text-gray-700"><strong data-i18n="about.localKnowledge">{t.about.localKnowledge}</strong> <span data-i18n="about.localKnowledgeDesc">{t.about.localKnowledgeDesc}</span></p>
          </div>
          
          <div class="flex items-start gap-3">
            <svg class="w-6 h-6 text-tropical-green flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            <p class="text-gray-700"><strong data-i18n="about.customItineraries">{t.about.customItineraries}</strong> <span data-i18n="about.customItinerariesDesc">{t.about.customItinerariesDesc}</span></p>
          </div>
          
          <div class="flex items-start gap-3">
            <svg class="w-6 h-6 text-tropical-green flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            <p class="text-gray-700"><strong data-i18n="about.support247">{t.about.support247}</strong> <span data-i18n="about.support247Desc">{t.about.support247Desc}</span></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  import { getI18n } from '../i18n';

  function updateAboutText() {
    const lang = localStorage.getItem('language') || 'es';
    const t = getI18n({ currentLocale: lang });
    
    document.querySelectorAll('#about [data-i18n]').forEach((el) => {
      const key = el.getAttribute('data-i18n');
      if (key) {
        const keys = key.split('.');
        let value: any = t;
        for (const k of keys) {
          value = value?.[k];
        }
        if (value && el.textContent !== value) {
          el.textContent = value;
        }
      }
    });
  }

  updateAboutText();
  window.addEventListener('languageChange', updateAboutText);
</script>