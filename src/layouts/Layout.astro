---
import { ViewTransitions } from 'astro:transitions';

interface Props {
  title: string;
  description?: string;
}

const {
  title,
  description = "Descubre la magia de Cuba con un agente de viajes local experimentado. Te esperan experiencias aut√©nticas, recorridos culturales y aventuras inolvidables.",
} = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />

    <ViewTransitions />

    <title>{title}</title>
  </head>
  <body>
    <slot />
    <script>
      // Sync language between localStorage and cookies
      function syncLanguage() {
        const savedLang = localStorage.getItem('language') || 'es';
        document.cookie = `language=${savedLang}; path=/; max-age=31536000`;
      }
      
      syncLanguage();
      
      // Listen for language changes
      window.addEventListener('languageChange', () => {
        syncLanguage();
      });
    </script>
  </body>
</html>
