---
import LanguageToggle from './react/LanguageToggle';
import { getLangFromUrl, useTranslations } from './i18n/utils';

const currentLang = getLangFromUrl(Astro.url);
const currentPath = Astro.url.pathname;
const t = useTranslations(currentLang);
---

<header id="header" class="fixed top-0 left-0 right-0 z-50 transition-all duration-300 bg-white/95 backdrop-blur-sm shadow-md">
  <nav class="container mx-auto px-4 py-4">
    <div class="flex items-center justify-between">
      <!-- Logo/Brand -->
      <a href="/" class="text-2xl font-bold text-caribbean-blue hover:text-ocean-blue transition-colors">
        Cuba<span class="text-coral">Brillante</span>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-8">
        <a href="#about" class="text-gray-700 hover:text-caribbean-blue transition-colors font-medium">{t('nav.about')}</a>
        <a href="#experiences" class="text-gray-700 hover:text-caribbean-blue transition-colors font-medium">{t('nav.experiences')}</a>
        <a href="#gallery" class="text-gray-700 hover:text-caribbean-blue transition-colors font-medium">{t('nav.gallery')}</a>
        <a href="#contact" class="text-gray-700 hover:text-caribbean-blue transition-colors font-medium">{t('nav.contact')}</a>
        <LanguageToggle client:load currentLang={currentLang} currentPath={currentPath} />
      </div>

      <!-- Contact Buttons -->
      <div class="hidden lg:flex items-center space-x-3">
        <a 
          href="mailto:info@cubavibes.com" 
          class="px-4 py-2 text-caribbean-blue border-2 border-caribbean-blue rounded-lg hover:bg-caribbean-blue hover:text-white transition-all font-medium"
          aria-label={t('nav.emailAriaLabel') as string}
        >
          {t('nav.writeUs')}
        </a>
        <a 
          href="https://wa.me/1234567890" 
          target="_blank"
          rel="noopener noreferrer"
          class="px-4 py-2 bg-tropical-green text-white rounded-lg hover:bg-green-600 transition-all font-medium flex items-center gap-2"
          aria-label={t('nav.whatsappAriaLabel') as string}
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
          </svg>
          {t('nav.whatsapp')}
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <div class="md:hidden flex items-center gap-2">
        <LanguageToggle client:load currentLang={currentLang} currentPath={currentPath} />
        <button 
        id="mobile-menu-button"
        class="md:hidden p-2 text-gray-700 hover:text-caribbean-blue transition-colors"
        aria-label={t('nav.menuAriaLabel') as string}
        aria-expanded="false"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Menu -->
    <div id="mobile-menu" class="hidden md:hidden mt-4 pb-4 border-t border-gray-200 pt-4">
      <div class="flex flex-col space-y-3">
        <a href="#about" class="text-gray-700 hover:text-caribbean-blue transition-colors font-medium py-2">{t('nav.about')}</a>
        <a href="#experiences" class="text-gray-700 hover:text-caribbean-blue transition-colors font-medium py-2">{t('nav.experiences')}</a>
        <a href="#gallery" class="text-gray-700 hover:text-caribbean-blue transition-colors font-medium py-2">{t('nav.gallery')}</a>
        <a href="#contact" class="text-gray-700 hover:text-caribbean-blue transition-colors font-medium py-2">{t('nav.contact')}</a>
        <div class="flex flex-col space-y-2 pt-2">
          <a 
            href="mailto:info@cubavibes.com" 
            class="px-4 py-2 text-center text-caribbean-blue border-2 border-caribbean-blue rounded-lg hover:bg-caribbean-blue hover:text-white transition-all font-medium"
          >
            {t('nav.writeUs')}
          </a>
          <a 
            href="https://wa.me/1234567890" 
            target="_blank"
            rel="noopener noreferrer"
            class="px-4 py-2 text-center bg-tropical-green text-white rounded-lg hover:bg-green-600 transition-all font-medium"
          >
            {t('nav.whatsapp')}
          </a>
        </div>
      </div>
    </div>
  </nav>
</header>

<script is:inline>
  (function() {
    function setupMobileMenu() {
      const menuButton = document.getElementById('mobile-menu-button');
      const mobileMenu = document.getElementById('mobile-menu');
      
      if (!menuButton || !mobileMenu) {
        console.log('Menu elements not found');
        return;
      }
      
      // Remover listeners previos clonando el botón
      const newMenuButton = menuButton.cloneNode(true);
      menuButton.parentNode.replaceChild(newMenuButton, menuButton);
      
      newMenuButton.addEventListener('click', function(e) {
        e.preventDefault();
        const isHidden = mobileMenu.classList.contains('hidden');
        
        if (isHidden) {
          mobileMenu.classList.remove('hidden');
          newMenuButton.setAttribute('aria-expanded', 'true');
        } else {
          mobileMenu.classList.add('hidden');
          newMenuButton.setAttribute('aria-expanded', 'false');
        }
      });
      
      // Cerrar menú al hacer click en un enlace
      const menuLinks = mobileMenu.querySelectorAll('a');
      menuLinks.forEach(function(link) {
        link.addEventListener('click', function() {
          mobileMenu.classList.add('hidden');
          newMenuButton.setAttribute('aria-expanded', 'false');
        });
      });
    }
    
    // Inicializar inmediatamente si el DOM ya está listo
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', setupMobileMenu);
    } else {
      setupMobileMenu();
    }
    
    // Reinicializar en navegación de Astro
    document.addEventListener('astro:page-load', setupMobileMenu);
  })();
</script>